{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "kendo-cli://schemas/kendo-component.json",
    "title": "Schema for valid kendo component names",

    "$defs": {

        "component-name": {
            "type": "string",
            "enum": [
                "appbar",
                "autocomplete",
                "avatar",
                "badge",
                "bottomnav",
                "breadcrumb",
                "button",
                "calendar",
                "card",
                "chat",
                "checkbox",
                "chip",
                "colorpicker",
                "combobox",
                "dataviz",
                "dateinput",
                "datepicker",
                "daterangepicker",
                "datetimepicker",
                "dialog",
                "drawer",
                "dropdowngrid",
                "dropdownlist",
                "dropdowntree",
                "editor",
                "expander",
                "fab",
                "filemanager",
                "filter",
                "floatinglabel",
                "form",
                "gantt",
                "grid",
                "imageeditor",
                "input",
                "label",
                "listbox",
                "listview",
                "loader",
                "map",
                "maskedtextbox",
                "mediaplayer",
                "menu",
                "multiselect",
                "notification",
                "numerictextbox",
                "pager",
                "panelbar",
                "pivotgrid",
                "progressbar",
                "radio",
                "rating",
                "scheduler",
                "scrollview",
                "slider",
                "splitter",
                "spreadsheet",
                "stepper",
                "switch",
                "tabstrip",
                "textarea",
                "textbox",
                "tilelayout",
                "timeline",
                "timepicker",
                "toolbar",
                "tooltip",
                "treelist",
                "treeview",
                "upload",
                "window",
                "wizard"
            ]
        },

        "component-list": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/component-name"
            },
            "uniqueItems": true
        }

    }
}
